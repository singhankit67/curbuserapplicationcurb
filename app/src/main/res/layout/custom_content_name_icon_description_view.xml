<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:id="@+id/content_view">

    <ImageView
        android:id="@+id/Content_Image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:background="@drawable/light_grey_rounded_corner"
        android:padding="8dp"
        android:src="@drawable/ic_baseline_lock_24" />

    <LinearLayout
        android:id="@+id/Content_name_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/Content_Image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="Heading Text"
            android:textColor="@color/black"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:textSize="10dp"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="4dp"
        android:visibility="gone"
        android:paddingBottom="4dp"
        android:textColor="@color/white"
        android:text="Upcoming Rides"
        android:textAllCaps="true"
        android:id="@+id/upcoming_text"
        android:layout_marginEnd="0dp"
        android:background="@drawable/green_rounded_view"
        android:layout_toStartOf="@id/go_to_next_view_button"
        android:layout_centerVertical="true"/>


    <ImageButton
        android:id="@+id/go_to_next_view_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/white"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_navigate_next_24" />

</RelativeLayout>