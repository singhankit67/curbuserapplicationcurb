<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curb!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.063"
            android:id="@+id/textView"/>
    <Button
            android:text="Create User"
            android:layout_width="200dp"
            android:layout_height="50dp" android:id="@+id/createUser"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="184dp"
            android:layout_marginTop="104dp"
            app:layout_constraintTop_toBottomOf="@+id/number"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/number"
            android:layout_marginEnd="176dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="177dp" app:layout_constraintHorizontal_bias="0.494"
            android:hint="mobile number" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/fullname"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/fullname"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="146dp" android:layout_marginEnd="176dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="177dp" android:hint="full name"/>

</androidx.constraintlayout.widget.ConstraintLayout>