<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:id="@+id/settings_layout"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0d132f7a">
        <ImageView
            android:id="@+id/goBackButtononSettingsScreen"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24_black"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:id="@+id/header_layout"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/goBackButtononSettingsScreen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardElevation="0dp"
            android:clickable="true"
            android:layout_margin="15dp"
            android:focusable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:clickable="true"
        android:id="@+id/rll1"
        android:focusable="true">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/curb_og_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/text_heading_size" />

            <TextView
                android:id="@+id/phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/important_text" />
        </LinearLayout>


    </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="0dp"
                android:elevation="0dp"
                android:id="@+id/total_rides_view">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/conversion_path_green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_bold"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:id="@+id/total_rides_text"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:text="0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:textSize="13dp"
                        android:text="Completed rides"
                        android:textColor="@color/lightGrey"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="0dp"
                android:elevation="0dp"
                android:id="@+id/total_co2Emission_saved_view">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/energy_savings_leaf"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_bold"
                        android:textStyle="bold"
                        android:id="@+id/totalco2_text"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:text="0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:textSize="12dp"
                        android:text="g"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:textSize="13dp"
                            android:text="@string/co2_text"
                            android:textColor="@color/lightGrey"
                            android:layout_marginBottom="5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:textSize="13dp"
                            android:text=" emision saved"
                            android:textColor="@color/lightGrey"
                            android:layout_marginBottom="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="0dp"
            android:elevation="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/favourite_places_view">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    android:textStyle="bold"
                    android:text="Favorite Places"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/important_text"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"/>
        <com.curb.curbuserapplication.CustomContentNameIconView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:content_Heading="Add Home"
            app:content_Icon="@drawable/home_settings"
            android:id="@+id/add_home_view"/>
                <com.curb.curbuserapplication.CustomContentNameIconView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:content_Heading="Add work"
                    app:content_Icon="@drawable/work_settings"
                    android:id="@+id/add_work_view"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">
            <com.curb.curbuserapplication.CustomContentNameIconDescriptionView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentHeading="Ride History"
                app:contentDescription="Manage the data you share with us"
                app:contentIcon="@drawable/conversion_path"
                android:id="@+id/ride_history_view"/>
        </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
                <com.curb.curbuserapplication.CustomContentNameIconDescriptionView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentHeading="Contact Us"
                    app:contentDescription="Manage the data you share with us"
                    app:contentIcon="@drawable/headphones"
                    android:id="@+id/contactUs_view"/>
            </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">
        <com.curb.curbuserapplication.CustomContentNameIconDescriptionView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentHeading="Terms of Service"
            app:contentDescription="Manage the data you share with us"
            app:contentIcon="@drawable/content_paste"
            android:id="@+id/privacy_view"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">
            <com.curb.curbuserapplication.CustomContentNameIconDescriptionView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentHeading="Sign out"
                app:contentDescription="Manage the data you share with us"
                app:contentIcon="@drawable/logout_icon"
                android:id="@+id/signout_view"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
        </ScrollView>
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>