<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_layout_work_address"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/maps_header_view"
        android:background="@color/white">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_baseline_keyboard_backspace_24_black"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/back_button_on_choose_work_address"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/back_button_on_choose_work_address"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Add Work"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="@dimen/text_heading_size"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.gms.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cameraTargetLat="19.2295"
        app:cameraTargetLng="72.8240"
        app:cameraZoom="10"
        app:layout_constraintTop_toBottomOf="@id/maps_header_view"
        android:layout_marginBottom="-15dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_card_layout_work"
        android:id="@+id/map11work"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/location_ping"
        android:id="@+id/mapPinWork"
        app:layout_constraintTop_toBottomOf="@id/maps_header_view"
        app:layout_constraintBottom_toBottomOf="@id/map11work"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/button_with_green_border_white_bg"
        app:layout_constraintBottom_toBottomOf="@id/map11work"
        android:layout_marginBottom="35dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_baseline_my_location_24"
        app:layout_constraintStart_toStartOf="parent"
        android:text="get location address"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/teal_700"
        android:textAllCaps="false"
        android:paddingStart="15dp"
        android:textStyle="bold"
        android:paddingEnd="15dp"
        android:visibility="gone"
        android:fontFamily="@font/open_sans"
        android:textSize="@dimen/button_text_size"
        android:id="@+id/get_location_address_button_work"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_layout_without_bottom_rounded_corner"
        android:paddingTop="15dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:id="@+id/bottom_card_layout_work"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/location_logo"
            android:src="@drawable/location_on"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/location_logo"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            android:text=""
            android:ellipsize="end"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="20dp"
            android:maxLines="2"
            android:textStyle="bold"
            android:textSize="@dimen/button_text_size"
            android:layout_marginTop="5dp"
            android:id="@+id/location_choose_place_work"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_compat_button"
            android:background="@drawable/add_home_work_button"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toBottomOf="@id/location_choose_place_work"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:text="Add work address"
            android:textColor="@color/white"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/button_text_size"
            android:id="@+id/add_work_address_button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include layout="@layout/enabling_location_ui"
        android:visibility="gone"
        android:id="@+id/location_not_enable_ui_on_select_workAddress"/>

</androidx.constraintlayout.widget.ConstraintLayout>