<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#ffffff"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        app:behavior_peekHeight="80dp"
    android:id="@+id/custom_persistant_bottom_sheet"
        android:elevation="20sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/bottom_sheet_header_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="25dp"
                android:layout_marginStart="15dp"
                android:text="Do you want to sign out?"
                android:textColor="#000"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"/>
            <ImageButton
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/ic_baseline_close_24"
                android:background="#fff"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/bottom_sheet_close_button"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/custom_bottom_sheet_ui_tobe_implemented"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_header_text"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
