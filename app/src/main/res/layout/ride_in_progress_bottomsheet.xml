<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ride_in_progress_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="7dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/white"
        tools:ignore="MissingConstraints">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="visible"
            android:id="@+id/ongoing_ride_ui"
            android:orientation="vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintTop_toTopOf="@id/current_trip_heading"
                app:layout_constraintBottom_toBottomOf="@id/current_trip_heading"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="15dp"
                android:visibility="visible"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                android:id="@+id/expand_bs_button"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/current_trip_heading"
                app:layout_constraintBottom_toBottomOf="@id/current_trip_heading"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:id="@+id/collapse_bs_button"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ongoing trip"
        android:textColor="@color/black"
        android:fontFamily="@font/open_sans_bold"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/current_trip_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:id="@+id/driver_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/current_trip_heading">


        <ImageView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:focusableInTouchMode="true"
            android:padding="4dp"
            android:layout_marginStart="-15dp"
            android:src="@drawable/tigorev"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/drivers_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="Driver's name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size" />

            <TextView
                android:id="@+id/car_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/open_sans"
                android:layout_weight="1"
                android:text="Car name"
                android:textColor="#a9a9aa"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/car_number"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="Car number"
                android:textColor="#a9a9aa"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Est. arrival time"
        android:textSize="13dp"
        android:fontFamily="@font/open_sans"
        app:layout_constraintTop_toBottomOf="@id/current_trip_heading"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/avg_time_heading"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:textColor="@color/lightGrey"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/avg_time_heading"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/open_sans_bold"
        android:text="0:00"
        android:id="@+id/ride_end_time"
        android:textSize="@dimen/text_heading_size"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="3dp"
        android:layout_below="@id/avg_time_heading"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/veryLightGrey"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/driver_details"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:id="@+id/line_divider0_ongoing"
                android:layout_marginEnd="15dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:id="@+id/from_to_text_layout_ongoing"
                android:paddingBottom="10dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toBottomOf="@id/line_divider0_ongoing"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pickUpIndicatorOngoing"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:padding="5dp"
                    android:layout_marginStart="2.5dp"
                    android:background="@drawable/pickup_location"
                    app:layout_constraintBottom_toBottomOf="@+id/pickUpTextView_mainBsOngoing"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/pickUpTextView_mainBsOngoing"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pickUpTextView_mainBsOngoing"
                    style="@style/CustomBoxWithoutOutline"
                    android:layout_width="match_parent"
                    android:enabled="false"
                    android:clickable="false"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/lightGrey"
                    app:hintEnabled="true"
                    app:layout_constraintStart_toEndOf="@+id/pickUpIndicatorOngoing"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pickup_from_edit_text"
                        android:layout_width="200dp"
                        android:layout_height="55dp"
                        android:clickable="false"
                        android:enabled="false"
                        android:maxWidth="150dp"
                        android:singleLine="true"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/open_sans"
                        android:hint="Pickup from"
                        android:maxLines="1"
                        android:ems="50"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textColorHint="@color/lightGrey"
                        android:textSize="@dimen/important_text" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/open_sans"
                    app:layout_constraintTop_toTopOf="@+id/pickUpTextView_mainBsOngoing"
                    app:layout_constraintBottom_toBottomOf="@+id/pickUpTextView_mainBsOngoing"
                    android:text="0:00"
                    android:id="@+id/pickup_time_on_Ongoing"
                    android:layout_marginEnd="15dp"
                    android:textSize="12dp"
                    android:textColor="@color/lightGrey"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="2dp"
                    android:layout_height="35dp"
                    android:background="@color/veryLightGrey"
                    android:id="@+id/thinLine"
                    app:layout_constraintBottom_toTopOf="@+id/dropIndicatorOngoing"
                    app:layout_constraintEnd_toEndOf="@+id/pickUpIndicatorOngoing"
                    app:layout_constraintStart_toStartOf="@+id/pickUpIndicatorOngoing"
                    app:layout_constraintTop_toBottomOf="@+id/pickUpIndicatorOngoing" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "55dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/dropTextView_mainBsOngoing"
                    android:background="@android:color/transparent"
                    app:hintEnabled="true"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/lightGrey"
                    style="@style/CustomBoxWithoutOutline"
                    app:layout_constraintStart_toEndOf="@+id/dropIndicatorOngoing"
                    app:layout_constraintTop_toBottomOf="@+id/pickUpTextView_mainBsOngoing">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/lightGrey"
                        android:maxLines="1"
                        android:ems="50"
                        android:clickable="false"
                        android:enabled="false"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:hint="Where to"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/open_sans"
                        android:textSize="@dimen/important_text"
                        android:id="@+id/where_to_edit_text"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/open_sans"
                    app:layout_constraintTop_toTopOf="@+id/dropTextView_mainBsOngoing"
                    app:layout_constraintBottom_toBottomOf="@+id/dropTextView_mainBsOngoing"
                    android:text="0:00"
                    android:id="@+id/drop_time_On_Ongoing"
                    android:layout_marginEnd="15dp"
                    android:textSize="12dp"
                    android:textColor="@color/lightGrey"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/dropIndicatorOngoing"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:background="@drawable/ic_baseline_location_on_24_teal_green"
                    app:layout_constraintBottom_toBottomOf="@+id/dropTextView_mainBsOngoing"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/dropTextView_mainBsOngoing"
                    app:layout_constraintTop_toBottomOf="@id/thinLine"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/veryLightGrey"
                app:layout_constraintTop_toBottomOf="@id/from_to_text_layout_ongoing"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:layout_marginStart="15dp"
                android:id="@+id/line_divider_ongoing"
                android:layout_marginEnd="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/price_time_view_ongoing"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/line_divider_ongoing"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:id="@+id/avg_time_view">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lightGrey"
                        android:fontFamily="@font/open_sans"
                        android:textSize="12dp"
                        android:text="Avg. Time"
                        android:layout_gravity="center"
                        android:id="@+id/est_time_heading"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:id="@+id/avg_time_text_ongoing"
                            android:fontFamily="@font/open_sans_bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/important_text"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/veryLightGrey"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="5dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:id="@+id/total_price_view">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lightGrey"
                        android:textSize="12dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Total Amount"
                        android:layout_gravity="center"
                        android:id="@+id/total_price_heading"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Rs"
                            android:fontFamily="@font/open_sans_bold"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/important_text"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/price_ongoing"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_bold"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/important_text"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/veryLightGrey"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/price_time_view_ongoing"
                android:layout_marginTop="12dp"
                android:layout_marginStart="15dp"
                android:id="@+id/line_divider1_ongoing"
                android:layout_marginEnd="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp"
                app:layout_constraintTop_toBottomOf="@id/line_divider1_ongoing"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/share_details_button"
                    android:orientation="horizontal"
                    android:background="@drawable/green_button">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/credit_card_text"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="5dp"
                            android:layout_toStartOf="@id/center_partiotner1"
                            android:fontFamily="@font/open_sans"
                            android:src="@drawable/share_location"
                            android:text="@string/Rs"
                            android:textColor="@color/black"
                            android:textSize="@dimen/important_text" />

                        <TextView
                            android:id="@+id/center_partiotner1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="."
                            android:textColor="@android:color/transparent" />

                        <TextView
                            android:id="@+id/now_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="-2dp"
                            android:layout_toEndOf="@id/center_partiotner1"
                            android:fontFamily="@font/open_sans"
                            android:text="Share"
                            android:textColor="@color/white"
                            android:textSize="@dimen/button_text_size"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/cancel_ride_button"
                    android:orientation="horizontal"
                    android:background="@drawable/button_with_green_border">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/cash_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/open_sans"
                            android:text="End ride"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/button_text_size"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ride_completed_ui"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Ride completed"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="@dimen/text_heading_size"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                app:lottie_rawRes="@raw/ride_completed"
                app:lottie_autoPlay="true"
                app:lottie_speed="0.6"
                app:lottie_loop="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/total_amount_layout1"
                android:layout_marginTop="6dp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Rs"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_heading_size"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/total_price_of_the_ride_cost1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_heading_size"

                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/important_text"
                android:textColor="@color/black"
                android:text="Thankyou for choosing CURB"
                android:id="@+id/thankyou_text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/pay_now_later_ui"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:visibility="visible"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/pay_now_button1"
                    android:orientation="horizontal"
                    android:background="@drawable/green_button">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/credit_card_text1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="2dp"
                            android:layout_toStartOf="@id/center_partiotner2"
                            android:fontFamily="@font/open_sans"
                            android:src="@drawable/credit_card_svg"
                            android:text="@string/Rs"
                            android:textColor="@color/black"
                            android:textSize="@dimen/important_text" />

                        <TextView
                            android:id="@+id/center_partiotner2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="."
                            android:textColor="@android:color/transparent" />

                        <TextView
                            android:id="@+id/now_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="2dp"
                            android:layout_toEndOf="@id/center_partiotner2"
                            android:fontFamily="@font/open_sans"
                            android:text="Now"
                            android:textColor="@color/white"
                            android:textSize="@dimen/button_text_size"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/pay_after_ride_button1"
                    android:orientation="horizontal"
                    android:background="@drawable/button_with_green_border">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/rupee_symbol"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_toStartOf="@id/center_partiotner3"
                            android:fontFamily="@font/open_sans"
                            android:src="@drawable/currency_rupee"
                            android:text="@string/Rs"
                            android:layout_marginEnd="4dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/important_text" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="."
                            android:textColor="@android:color/transparent"
                            android:id="@+id/center_partiotner3"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:id="@+id/cash_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="-8dp"
                            android:layout_toEndOf="@id/center_partiotner3"
                            android:fontFamily="@font/open_sans"
                            android:text="Cash"
                            android:textColor="@color/black"
                            android:textSize="@dimen/button_text_size"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text="To be paid to the driver"
                android:textColor="@color/black"
                android:textSize="@dimen/important_text"
                android:textStyle="bold"
                android:textAlignment="center"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:id="@+id/to_be_paid_text"
                android:layout_marginBottom="15dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:text="done"
                android:id="@+id/done_button"
                android:fontFamily="@font/open_sans"
                android:textStyle="bold"/>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
